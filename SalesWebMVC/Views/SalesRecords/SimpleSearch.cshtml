@model IEnumerable<SalesRecord>
@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"] </h2>
<nav class="navbar" >
    <div class="container-fluid ">
        <form role="search" class="form-inline ">
            <div class="form-group">
                <label for="minDate">Min Date</label>
                <input type="date" name="minDate" class="form-control" value=@ViewData["minData"]  />
            </div>
            <div class="form-group ml-2">
                <label for="maxDate">Max Date</label>
                <input type="date" name="maxDate" value=@ViewData["maxData"] class="form-control" />
            </div>
            <div>
                <input type="submit" class="btn btn-primary ml-3" value="Filter" />
            </div>
        </form>
    </div>
</nav>
<div class="card ">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title"> Total sales = @Model.Sum(x => x.Amount).ToString("F2")</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-success">
                    <th>
                        @Html.DisplayNameFor(x => x.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Seller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Seller.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Date)
                        </td>
                        <td>

                            @Html.DisplayFor(x => item.Seller.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Seller.Department.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>